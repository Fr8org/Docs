<div style="padding-bottom: 115px;"></div>
<div data-ng-controller="HeaderController" class="page-header" style="position: fixed; z-index: 1025; top: 0px; right: 0; left: 0">
<div class="page-header-top">
    <!-- BEGIN HEADER TOP -->
    <div class="container">
        <!-- BEGIN LOGO -->
        <div class="page-logo">
            <a href="/">
                <img src="/Content/img/dockyard_logo.png" alt="logo" class="logo-default">
            </a>
            <!--BEGIN STICKER-->
            <div class="page-sticker">
                <p>beta</p>
            </div>
            <!--END STICKER-->
        </div>
        <!-- END LOGO -->

        <!-- BEGIN RESPONSIVE MENU TOGGLER -->
        <a href="javascript:;" class="menu-toggler"></a>
        <!-- END RESPONSIVE MENU TOGGLER -->

        <!-- BEGIN TOP NAVIGATION MENU -->
        <div class="top-menu">
            <ul class="nav navbar-nav pull-right">
                <!-- BEGIN USER LOGIN DROPDOWN -->
                @using Data.States
                @using HubWeb.Infrastructure_HubWeb
                @using Microsoft.AspNet.Identity
                @if (Request.IsAuthenticated)
                {
                    <li class="dropdown dropdown-user dropdown-dark">
                        <a href="javascript:;" class="dropdown-toggle" dropdown-menu-hover data-toggle="dropdown" data-close-others="true">
                            <span class="username username-hide-mobile">
                                    Hello
                                    @if (User.IsInRole("Guest"))
                                    {
                                        <text>Guest User</text>
                                    }
                                    else
                                    {
                                        <text>@User.Identity.GetUserName()</text>
                                    }! 
                                </span>
                        </a>

                        @if (!User.IsInRole("Guest"))
                        {
                            <ul class="dropdown-menu dropdown-menu-default">
                                <li>
                                    <a ui-sref="myaccount">
                                        <i class="icon-user"></i> My Profile
                                    </a>
                                </li>
                                <li>
                                    <a ui-sref="changePassword">
                                        <i class="icon-key"></i> Change Password
                                    </a>
                                </li>
                                <li>
                                    <a href="/DockyardAccount/Logoff">
                                        <i class="icon-key"></i> Log Out
                                    </a>
                                </li>
                            </ul>
                        }
                    </li>
                    <!-- END USER LOGIN DROPDOWN -->
                    if (@User.IsInRole("Guest"))
                    {
                        <li class="have-account-login-guest visible-lg visible-md visible-sm">
                            <a href="/DockyardAccount/Logoff">
                                <span>Have an Account? Login</span>
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>
        <!-- END TOP NAVIGATION MENU -->
    </div>
</div>
<!-- END HEADER TOP -->

<!-- BEGIN HEADER MENU -->
@Html.Partial("HeaderNav")
<!-- END HEADER MENU -->
</div>